<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Divider.Horizontal" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

    <style name="Widget.Divider.Vertical" parent="">
        <item name="android:background">?attr/dividerVertical</item>
    </style>

    <style name="Widget.Weather20.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Weather20.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="WeatherTheme.WhiteColorText" parent="Theme.AppCompat">
        <item name="weatherTextColor">@color/white</item>
        <item name="weatherDividerColor">@drawable/white_divider</item>
    </style>

    <style name="WeatherTheme.BlackColorText" parent="Theme.AppCompat">
        <item name="weatherTextColor">@color/black</item>
        <item name="weatherDividerColor">@drawable/black_divider</item>
    </style>


</resources>